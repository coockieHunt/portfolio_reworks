# API server
PORT=3001
API_ROOT=/api

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Mail transport
MAIL_HOST=
MAIL_PORT=0
MAIL_SECURE=false
MAIL_USER=
MAIL_PASS=

# Logging
LOG_DIR=logs

# Rate limiter overrides (optional)
RATE_WINDOW_SECONDS=60
RATE_MAX_REQUESTS=10

# IP whitelist (comma-separated). Examples: "::1,127.0.0.1,1.2.3.4"
IP_WHITELIST=::1
