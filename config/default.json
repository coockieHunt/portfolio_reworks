{
    "port": 3001,

    "ApiRoot": "/api",
    
    "MailTransport": {
        "host": "",
        "port": 0,
        "secure": false,
        "user": "",
        "pass": ""
    },

    "allowedIPs": [
        "::1"
    ],

    "Log":{
        "maxLine": 5000,
        "directory": "logs",
        "name": {
            "mail": "mail_log.txt"
        }
    },

    "redis": {
        "host": "localhost",
        "port": 6379,
        "password": ""  
    }
    ,
    "rateLimiter": {
        "enabled": true,
        "default": {
            "windowSeconds": 60,
            "maxRequests": 10
        },
        "routes": {
            "mail.sendEmail": {
                "windowSeconds": 60,
                "maxRequests": 3
            }
            ,
            "counter.get": {
                "windowSeconds": 60,
                "maxRequests": 40
            },
            "counter.increment": {
                "windowSeconds": 60,
                "maxRequests": 40
            }
        }
    }
}