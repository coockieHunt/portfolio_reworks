delete {
  url: {{base_url}}{{endPointApi}}/counter/:counteur_name
  body: none
  auth: inherit
}

params:path {
  counteur_name: THEME_RAND
}

tests {
  const status = res.getStatus();
  
  test("Status code is 200", function() {
    expect(status).to.equal(200);
  });
  
  if (status === 200) {
    test("Response success is true", function() {
      const body = res.getBody();
      expect(body.success).to.be.true;
      expect(body.message).to.equal("Success");
    });
  
    test("Counter is reset to 0", function() {
      const body = res.getBody();
      expect(body.data).to.exist;
      expect(body.data).to.have.property('counterValue');
      expect(body.data.counterValue).to.equal(0);
    });
  
    test("Counter exists after reset", function() {
      const body = res.getBody();
      expect(body.data).to.have.property('exist');
      expect(body.data.exist).to.be.true;
    });
  }
}

settings {
  encodeUrl: true
  timeout: 0
}

