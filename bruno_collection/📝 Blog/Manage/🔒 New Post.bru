tests {
  const status = res.getStatus();
  
  test("Status code is 200 on valid creation", function() {
    expect(status).to.equal(200);
  });
  
  if (status === 200) {
    test("Response success is true", function() {
      const body = res.getBody();
      expect(body.success).to.be.true;
      expect(body.message).to.include("created successfully");
    });
  
    test("Response contains post data", function() {
      const body = res.getBody();
      expect(body.data).to.exist;
      expect(body.data).to.have.property('post');
    });
  
    test("Post structure is valid", function() {
      const body = res.getBody();
      const post = body.data.post;
      
      expect(post).to.have.property('id');
      expect(post).to.have.property('title');
      expect(post).to.have.property('slug');
      expect(post).to.have.property('content');
    });
  }
  
  if (status === 400) {
    test("Missing title returns 400", function() {
      const body = res.getBody();
      expect(body.message).to.include("Title is required");
    });
  }
  
  if (status === 409) {
    test("Duplicate slug returns 409", function() {
      const body = res.getBody();
      expect(body.message).to.include("slug already exists");
    });
  }
}

settings {
  encodeUrl: true
