body:json {
  {
    "publish": true
  }
}

tests {
  const status = res.getStatus();
  
  test("Status code is 200", function() {
    expect(status).to.equal(200);
  });
  
  if (status === 200) {
    test("Response success is true", function() {
      const body = res.getBody();
      expect(body.success).to.be.true;
      expect(body.message).to.include("updated successfully");
    });
  
    test("Publish status is updated", function() {
      const body = res.getBody();
      const post = body.data.post;
      expect(post).to.have.property('published');
    });
  }
  
  if (status === 404) {
    test("Post not found returns 404", function() {
      const body = res.getBody();
      expect(body.message).to.include("not found");
    });
  }
}

